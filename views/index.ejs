<%# The layout.ejs file will be used to wrap this content. %>
<div class="container">
    <h2 class="welcome-title">Welcome to CSE Motors!</h2>
    <div class="hero-section">
        <div class="hero-content">
            <h3 class="car-title">DMC Delorean</h3>
            <ul class="car-features">
                <li>3 Cup holders</li>
                <li>Superman doors</li>
                <li>Fuzzy dice!</li>
            </ul>
            <a href="#" class="cta-button">Own Today</a>
        </div>
        <div class="hero-image">
            <img src="/images/vehicles/delorean.jpg" alt="DMC Delorean - Silver sports car with gull-wing doors" class="car-image">
        </div>
    </div>

    <div class="content-grid">
        <section class="upgrades-section">
            <h3 class="section-title">Delorean Upgrades</h3>
            <div class="upgrades-grid">
                <div class="upgrade-item">
                    <img src="/images/upgrades/flux-cap.png" alt="Flux Capacitor upgrade" class="upgrade-image">
                    <span class="upgrade-name">Flux Capacitor</span>
                </div>
                <div class="upgrade-item">
                    <img src="/images/upgrades/flame.jpg" alt="Flame Decals upgrade" class="upgrade-image">
                    <span class="upgrade-name">Flame Decals</span>
                </div>
                <div class="upgrade-item">
                    <img src="/images/upgrades/bumper_sticker.jpg" alt="Bumper Stickers upgrade" class="upgrade-image">
                    <span class="upgrade-name">Bumper Stickers</span>
                </div>
                <div class="upgrade-item">
                    <img src="/images/upgrades/hub-cap.jpg" alt="Hub Caps upgrade" class="upgrade-image">
                    <span class="upgrade-name">Hub Caps</span>
                </div>
            </div>
        </section>

        <section class="reviews-section">
            <h3 class="section-title">DMC Delorean Reviews</h3>
            <div class="reviews-list">
                <div class="review">
                    <p>"So fast it's almost like traveling in time." <span class="rating">(4/5)</span></p>
                </div>
                <div class="review">
                    <p>"Coolest ride on the road." <span class="rating">(4/5)</span></p>
                </div>
                <div class="review">
                    <p>"I'm feeling McFly!" <span class="rating">(5/5)</span></p>
                </div>
                <div class="review">
                    <p>"The most futuristic ride of our day." <span class="rating">(4.5/5)</span></p>
                </div>
                <div class="review">
                    <p>"80's livin and I love it!" <span class="rating">(5/5)</span></p>
                </div>
            </div>
        </section>
    </div>
</div>